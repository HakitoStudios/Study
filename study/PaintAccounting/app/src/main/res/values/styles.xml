<resources xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LinearStyle">


    </style>

    <style name="ListViewStyle">

    </style>

    <style name="FABstyle">
        <item name="android:layout_margin">@dimen/fab_margin</item>
    </style>

    <style name="HyperLink">
        <item name="android:textColor">#5157ff</item>
        <item name="android:enabled">false</item>

        <item name="android:text">"Not selected"</item>
    </style>

    <style name="TableCell">

    </style>

<style name="TableHeader">
    <item name="android:textColor">#393939</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">20dp</item>
</style>

    <style name="FABstyle.Add">
        <item name="android:scaleType">center</item>
        <item name="android:tint">#ffffff</item>
    </style>

    <style name="MinorLayout">
        <item name="android:background">@drawable/minor_layout_back</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:padding">3dp</item>

    </style>

</resources>
